@model IEnumerable<SimpleCRM.Models.InteractionModel.InteractionListItem>

@{
    ViewBag.Title = "Interactions";
}
<div class="jumbotron">
    <h2>Interactions:</h2>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerFullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.InteractionId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.InteractionId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.InteractionId })
                </td>
            </tr>
        }
    </table>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
</div>